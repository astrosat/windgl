{
  "name": "windGL",
  "version": "0.1.0",
  "description": "A MapboxGL plugin for animated GRIB data visualization",
  "main": "dist/windgl.cjs.js",
  "module": "dist/windgl.esm.js",
  "browser": "dist/windgl.umd.js",
  "files": ["dist"],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "eslint src/*.js demo/index.js data/prepare.js",
    "serve": "st -nc -i index.html",
    "start": "run-p serve watch"
  },
  "keywords": ["mapboxgl", "wind", "particles"],
  "author": ["Vladimir Agafonkin", "Jakub Hampl"],
  "license": "ISC",
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-mourner": "^2.0.1",
    "npm-run-all": "^4.0.1",
    "pngjs": "^3.0.0",
    "prettier": "^1.14.3",
    "rollup": "^0.60.7",
    "rollup-plugin-buble": "^0.19.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-watch": "^3.2.2",
    "st": "^1.2.0"
  },
  "eslintConfig": {
    "extends": "mourner",
    "parserOptions": {
      "sourceType": "module"
    },
    "globals": {
      "dat": false,
      "WindGL": false
    },
    "rules": {
      "no-var": 2,
      "prefer-const": 2
    }
  }
}
